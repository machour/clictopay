{
  "name": "machour/clictopay",
  "type": "library",
  "description": "ClicToPay PHP SDK",
  "authors": [
    {
      "name": "Mehdi Achour",
      "email": "machour@gmail.com"
    }
  ],
  "keywords": [
    "clictopay",
    "payment",
    "smt",
    "tunisia"
  ],
  "homepage": "https://www.clictopay.com.tn/",
  "license": "BSD-3-Clause",
  "support": {
    "issues": "https://github.com/machour/clictopay/issues?state=open",
    "source": "https://github.com/machour/clictopay"
  },
  "require": {
    "php": "^8.3",
    "spatie/laravel-data": "^4.18",
    "guzzlehttp/guzzle": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "Machour\\ClicToPay\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Machour\\ClicToPay\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpstan/extension-installer": "^1.4",
    "pestphp/pest": "^4.1",
    "orchestra/testbench": "^10.0"
  },
  "scripts": {
    "test": "vendor/bin/pest",
    "test:coverage": "vendor/bin/pest --coverage",
    "phpstan": "vendor/bin/phpstan analyse"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "pestphp/pest-plugin": true
    }
  }
}
